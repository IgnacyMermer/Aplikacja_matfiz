<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/profileImage"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/nick"
        android:text="nick"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/profileImage"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/nick"
        android:src="@drawable/likeicon"
        android:layout_marginLeft="5dp"
        android:id="@+id/ikonkaLike"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/liczbaLikow"
        android:layout_toRightOf="@id/ikonkaLike"
        android:text=""
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:textSize="15sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_toRightOf="@id/profileImage"
        android:layout_below="@id/nick"
        android:layout_marginRight="5dp"
        android:id="@+id/showMessage_layout"
        android:layout_toLeftOf="@id/piateZdjecie">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_left2"
            android:layout_marginLeft="5dp"
            android:text="hello"
            android:autoLink="all"
            android:textColorLink="@android:color/black"
            android:textColor="@android:color/black"
            android:padding="9dp"
            android:textSize="20sp"
            android:id="@+id/show_message"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profileImage"
        android:layout_marginLeft="10dp"
        android:text="Odpowiedz"
        android:layout_below="@id/showMessage_layout"
        android:textColor="@android:color/white"
        android:padding="3dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:id="@+id/options"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/options"
        android:layout_marginLeft="10dp"
        android:text="Polub"
        android:layout_below="@id/showMessage_layout"
        android:textColor="@android:color/white"
        android:padding="3dp"
        android:textSize="12sp"
        android:id="@+id/like"
        android:visibility="gone"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/like"
        android:layout_marginLeft="10dp"
        android:text=""
        android:layout_below="@id/showMessage_layout"
        android:textColor="@android:color/white"
        android:padding="3dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:id="@+id/data"
        android:layout_centerVertical="true"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/nick"
        android:id="@+id/pierwszeZdjecie"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_insert_photo_black_24dp"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/nick"
        android:id="@+id/drugieZdjecie"
        android:visibility="gone"
        android:layout_toLeftOf="@id/pierwszeZdjecie"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_insert_photo_black_24dp"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/nick"
        android:id="@+id/trzecieZdjecie"
        android:visibility="gone"
        android:layout_toLeftOf="@id/drugieZdjecie"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_insert_photo_black_24dp"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/nick"
        android:id="@+id/czwarteZdjecie"
        android:layout_toLeftOf="@id/trzecieZdjecie"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_insert_photo_black_24dp"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/nick"
        android:id="@+id/piateZdjecie"
        android:layout_toLeftOf="@id/czwarteZdjecie"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_insert_photo_black_24dp"/>
</RelativeLayout>
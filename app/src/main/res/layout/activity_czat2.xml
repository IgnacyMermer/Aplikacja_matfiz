<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Czaty.Chat2"
    android:id="@+id/drawerUlubione_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rellayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rellayoutMiddle"
            android:background="@color/kolor_tla"
            android:layout_below="@+id/rellayoutTopBar"
            android:layout_above="@+id/rellayoutBottomBar">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appbar"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_view"
                android:layout_below="@id/appbar"
                android:layout_above="@id/zalacznikiLayout"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/dol"
                android:visibility="gone"
                android:background="#B3B2B2"
                android:textSize="23dp"
                android:layout_marginTop="5dp"
                android:id="@+id/odpowiedzLayout">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="23dp"
                    android:layout_toLeftOf="@id/usunOdpowiedzBtn"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:text=""
                    android:id="@+id/tekst_odpowiedz"
                    android:textColor="@android:color/black"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_black_24dp"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/usunOdpowiedzBtn"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_above="@id/odpowiedzLayout"
                android:id="@+id/zalacznikiLayout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:background="#F6D9D9"
                    android:textSize="23dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/zalaczniki"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_cancel_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/anulujZalaczniki"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:id="@+id/dol"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_share_black_24dp"
                    android:id="@+id/dolaczZnak"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_send"
                    android:layout_toRightOf="@id/dolaczZnak"
                    android:layout_toLeftOf="@id/btn_send"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#656565"
                    android:background="@android:color/transparent"
                    android:hint="Napisz wiadomość" />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_send"
                    android:background="@drawable/ic_send_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
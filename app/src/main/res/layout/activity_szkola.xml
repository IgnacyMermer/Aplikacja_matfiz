<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Szkola"
    android:id="@+id/drawerSzkola_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rellayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/rellayoutTopBar"
            android:background="@android:color/black"
            android:layout_alignParentTop="true">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.appbar.AppBarLayout>
            <ImageButton
                android:id="@+id/buttonBar"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_menu_black_24dp"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rellayoutMiddle"
            android:layout_below="@id/rellayoutTopBar"
            android:layout_above="@id/rellayoutBottomBar"
            android:background="@drawable/gradient_list">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rellayoutTopBar"
                android:layout_above="@+id/rellayoutBottomBar">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:text="Fizyka teoria"
                    android:background="@drawable/btn_clicked"
                    android:id="@+id/buttonFizykaTeoria"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@android:color/black"
                    android:text="Fizyka kalkulator"
                    android:background="@drawable/btn_clicked"
                    android:id="@+id/buttonFizykaKalkulator"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:text="Matematyka teoria"
                    android:background="@drawable/btn_clicked"
                    android:id="@+id/buttonMatematykaTeoria"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="Matematyka kalkulator"
                    android:background="@drawable/btn_clicked"
                    android:id="@+id/buttonMatematykaKalkulator"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="380dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="Informatyka algorytmy"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_clicked"
                    android:id="@+id/buttonInformatykaAlgorytmy"/>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rellayoutBottomBar"
            android:layout_alignParentBottom="true">
           <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/menu_nowe"
                app:itemTextColor="@drawable/item_selectede"
                app:itemIconTint="@drawable/item_selectede"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/activity_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/navList"
        android:layout_gravity="left|start"
        android:background="@android:color/white"
        android:divider="@color/dividerColor"
        android:dividerHeight="0.5dp"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:layout_width="300dp"
        android:layout_height="match_parent">
    </ExpandableListView>
</androidx.drawerlayout.widget.DrawerLayout>
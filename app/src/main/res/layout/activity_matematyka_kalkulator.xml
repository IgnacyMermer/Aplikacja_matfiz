<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatematykaKalkulator"
    android:id="@+id/drawerMatematykaKalkulator_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rellayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/rellayoutTopBar"
            android:background="@android:color/black"
            android:layout_alignParentTop="true">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.appbar.AppBarLayout>
            <ImageButton
                android:id="@+id/buttonBar"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_menu_black_24dp"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rellayoutTopBar"
            android:background="@drawable/gradient_list"
            android:id="@+id/tloScrollek"
            android:layout_above="@+id/rellayoutBottomBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rellayoutMiddle"
                android:layout_below="@+id/rellayoutTopBar"
                android:layout_above="@+id/rellayoutBottomBar">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@drawable/btn_clicked"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:textSize="30dp"
                    android:text="Trojkaty"
                    android:id="@+id/buttonTrojkaty" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@drawable/btn_clicked"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:textSize="30dp"
                    android:id="@+id/buttonCzworokaty"
                    android:text="CzworokÄ…ty"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@drawable/btn_clicked"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="330dp"
                    android:textSize="30dp"
                    android:id="@+id/buttonInneFigury"
                    android:text="Inne figury"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@drawable/btn_clicked"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="480dp"
                    android:textSize="30dp"
                    android:id="@+id/buttonFunkcje"
                    android:text="Funkcja"/>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rellayoutBottomBar"
            android:layout_alignParentBottom="true">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/menu_nowe"
                app:itemTextColor="@drawable/item_selectede"
                app:itemIconTint="@drawable/item_selectede"/>
        </RelativeLayout>
    </RelativeLayout>
    <ExpandableListView
        android:id="@+id/navList"
        android:layout_gravity="left|start"
        android:background="@android:color/white"
        android:divider="@color/dividerColor"
        android:dividerHeight="0.5dp"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:layout_width="300dp"
        android:layout_height="match_parent">
    </ExpandableListView>



</androidx.drawerlayout.widget.DrawerLayout>